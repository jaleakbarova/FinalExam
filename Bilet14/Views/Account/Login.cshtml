@{
    Layout = null;
}

@using Bilet14.ViewModels.AccountVMs
@model LoginVM

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/areas/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/areas/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/areas/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/areas/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/areas/images/logo.svg" alt="logo">
                            </div>
                            <h4>Hello! let's get started</h4>
                            <h6 class="font-weight-light">Sign in to continue.</h6>
                            <form class="pt-3" asp-action="Login">
                                <div class="form-group">
                                    <input asp-for="UserNameOrEmail" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username or Email">
                                    <span asp-validation-for="UserNameOrEmail"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>

                                <div asp-validation-summary="ModelOnly"></div>

                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                                </div>

                                <div class="text-center mt-4 font-weight-light">
                                    Don't have an account? <a asp-action="Register" class="text-primary">Create</a>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/areas/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/areas/js/off-canvas.js"></script>
    <script src="~/areas/js/hoverable-collapse.js"></script>
    <script src="~/areas/js/template.js"></script>
    <!-- endinject -->
</body>

</html>
